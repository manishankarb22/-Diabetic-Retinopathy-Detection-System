# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-to-a-random-string

# IBM Cloudant Configuration
CLOUDANT_USERNAME=your-cloudant-username
CLOUDANT_API_KEY=your-cloudant-api-key
CLOUDANT_URL=your-cloudant-url

# Database Configuration
DATABASE_NAME=diabetic_retinopathy_db

# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=True
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Model Configuration
MODEL_PATH=model/Updated-Xception-diabetic-retinopathy.h5
IMG_HEIGHT=224
IMG_WIDTH=224

